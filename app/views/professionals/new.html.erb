<h2>Ajouter un professionnel</h2>

<%= form_with model: [@salon, @professional], local: true do |f| %>
  <div class="form-group">
    <%= f.label :first_name, "Prénom" %>
    <%= f.text_field :first_name, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :last_name, "Nom" %>
    <%= f.text_field :last_name, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :trainings, "Formations" %>
    <%= f.text_area :trainings, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :experience, "Expérience" %>
    <%= f.text_area :experience, class: "form-control" %>
  </div>

  <%= f.submit "Ajouter le professionnel", class: "btn btn-primary" %>
<% end %>

<%= link_to "Retour au salon", salon_path(@salon), class: "btn btn-secondary" %>

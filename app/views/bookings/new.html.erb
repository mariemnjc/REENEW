<div class="container text-center">
  <h1>Votre RÃ©servation</h1>
  <div class="form-control">
    <p><%= @service.name %></p>
    <p><%= @professional.first_name %></p>

    <%= simple_form_for [@professional_service, @booking] do |f| %>
      <p><%= Date.today.strftime(("%d/%m/%Y")) %></p>
      <%= f.collection_radio_buttons(:start_date, @slots, :last, :first) do |b| %>
      <%=  b.radio_button(class: "btn-check") + b.label(class: "btn btn-primary") %>
      <% end %>
      <p><%= Date.tomorrow.strftime(("%d/%m/%Y")) %></p>
      <%= f.collection_radio_buttons(:start_date, @slots_tomorrow, :last, :first) do |tomorrow| %>
      <%=  tomorrow.radio_button(class: "btn-check") + tomorrow.label(class: "btn btn-primary") %>
      <% end %>
      <p><%= 2.day.from_now.strftime(("%d/%m/%Y")) %></p>
      <%= f.collection_radio_buttons(:start_date, @slots_j2, :last, :first) do |j2| %>
      <%= j2.radio_button(class: "btn-check") + j2.label(class: "btn btn-primary") %>
      <% end %>
      <br>
      <%= f.button :submit, "Valider", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

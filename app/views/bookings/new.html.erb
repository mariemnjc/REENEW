<div class="container text-center">
  <h1>Votre RÃ©servation</h1>
  <div class="form-control">


    <label class="form-label"><strong>Votre soin</strong></label>
    <input class="form-control text-center" type="text" value="<%= @service.name %>" aria-label="Disabled input example" disabled readonly>
    <label class="form-label"><strong>Avec</strong></label>
    <input class="form-control text-center" type="text" value="<%= @professional.first_name %>" aria-label="Disabled input example" disabled readonly>

    <%= simple_form_for [@professional_service, @booking] do |f| %>

      <p class="marge"><%= Date.today.strftime(("%d/%m/%Y")) %></p>
      <%= f.collection_radio_buttons(:start_date, @slots, :last, :first) do |b|
        b.radio_button(class: "btn-check") + b.label(class: "btn btn-primary")
      end %>
      <p class="marge"><%= Date.tomorrow.strftime(("%d/%m/%Y")) %></p>
      <%= f.collection_radio_buttons(:start_date, @slots_tomorrow, :last, :first) do |b|
        b.radio_button(class: "btn-check") + b.label(class: "btn btn-primary")
      end %>
      <p class="marge"><%= 2.day.from_now.strftime(("%d/%m/%Y")) %></p>
      <%= f.collection_radio_buttons(:start_date, @slots_j2, :last, :first) do |b|
        b.radio_button(class: "btn-check") + b.label(class: "btn btn-primary")
      end %>
    <br>
      <%= f.button :submit, "Valider", class: "d-grid gap-2 col-6 mx-auto marge btn btn-primary" %>
    <% end %>
  </div>
</div>

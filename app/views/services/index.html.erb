<div class="salons-container">
  <aside class="sidebar">
    <%= render "salons/sidebar" %>
  </aside>

  <main class="main-content">
    <h2>Services proposés dans <%= @salon.name %></h2>

    <%= link_to "Ajouter un service", new_salon_service_path(@salon), class: "btn btn-primary mb-4" %>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Nom</th>
          <th>Catégorie</th>
          <th>Prix (€)</th>
        </tr>
      </thead>
      <tbody>
        <% @services.each do |service| %>
          <tr>
            <td><%= service.name %></td>
            <td><%= service.category %></td>
            <td><%= service.price %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </main>
</div>

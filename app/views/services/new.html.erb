<div class="salons-container">
  <aside class="sidebar">
    <%= render "salons/sidebar" %>
  </aside>

  <main class="main-content">
    <h2>Ajouter un service pour <%= @salon.name %></h2>

    <%= form_with model: [@salon, @service], local: true do |f| %>
      <div class="form-group">
        <%= f.label :name, "Nom du service" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :category, "Catégorie" %>
        <%= f.select :category, ["Épilation", "Bien-être", "Soins", "Manucure", "Pédicure", "Cils", "Maquillage"], {}, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :price, "Prix (€)" %>
        <%= f.number_field :price, class: "form-control", step: 1 %>
      </div>

      <%= f.submit "Créer le service", class: "btn btn-primary mt-3" %>
    <% end %>
  </main>
</div>
